pipeline {
    agent any

    stages {
        stage('Primera linea') {
            steps {
                sh 'ls'
                bash 'echo "Primera linea del archivo" > archivo.txt'
            }
        }

        stage('Segunda linea') {
            steps {
                sh 'ls'
                pwsh '''
                $PROCESOS=Get-Process | ConvertTo-Csv
                $PROCESOS | Select -last 2 |
                    Add-Content -Path archivo.txt
                '''
                sh 'cat archivo.txt'
            }
        }
    }
}