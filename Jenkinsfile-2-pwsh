pipeline {
    agent any

    stages {
        stage('Primera linea') {
            steps {
                sh 'echo "Primera linea del archivo" > archivo.txt'
            }
        }

        stage('Segunda linea') {
            steps {
                // usando el int√©rprete de comandos pwsh
                pwsh 'Add-Content -Value "Segunda linea del archivo" -Path archivo.txt'
                sh 'cat archivo.txt'
            }
        }
    }
}